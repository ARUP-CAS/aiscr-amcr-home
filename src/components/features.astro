---
import Badge from "@components/ui/badge.astro";
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Databáze nálezů",
    description:
      "Rozsáhlá databáze archeologických nálezů z celé České republiky, včetně detailních popisů a fotografií.",
    icon: "fluent:document-javascript-24-regular",
  },
  {
    title: "Interaktivní mapa",
    description:
      "Přehledná mapa s vyznačenými archeologickými nalezišti a možností filtrování podle období a typu nálezu.",
    icon: "fluent:trophy-24-regular",
  },
  {
    title: "Virtuální prohlídky",
    description:
      "3D rekonstrukce významných archeologických lokalit s možností virtuální procházky a prohlížení artefaktů.",
    icon: "fluent:box-24-regular",
  },
  {
    title: "Odborné publikace",
    description:
      "Knihovna odborných článků, studií a publikací z oblasti archeologie, dostupná pro registrované uživatele.",
    icon: "fluent:box-multiple-24-regular",
  },
  {
    title: "Vyhledávání",
    description:
      "Pokročilé vyhledávání v databázi nálezů, publikací a lokalit s možností filtrování podle různých kritérií.",
    icon: "fluent:book-search-24-regular",
  },
  {
    title: "Komunitní sekce",
    description:
      "Fórum pro diskuze, sdílení poznatků a spolupráci mezi amatérskými i profesionálními archeology.",
    icon: "fluent:people-community-24-regular",
  },
];
---

<!-- <div class="mt-16">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    We have got more awesome <span class="text-red-600">features</span>
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Use this section to highlight not so important features of your product.
  </p>
</div> -->
<div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
  <Badge color="red">NEVIM</Badge>
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
    Už fakt nevím
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
    Co tady dát? 
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-8 md:gap-16">
  {
    features.map((item) => (
      <div class="flex flex-col gap-4 items-start group hover:bg-slate-50 hover:border-slate-100 border border-transparent rounded-lg transition-all md:-m-5 p-5">
        <div class="mt-1 bg-red-50 border shadow shadow-red-100/50 border-red-100 transition-colors rounded-lg grid place-items-center  p-2 w-10 h-10 shrink-0">
          <Icon class="text-red-500" name={item.icon} size={24} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
