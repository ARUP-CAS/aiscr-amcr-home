---
import Container from "@components/container.astro";
import Review from "@components/review.astro";

const testimonials = [
  {
    name: "Jan Novák",
    title: "24. 10. 2021",
    image: "https://images.unsplash.com/photo-1624298357597-fd92dfbec01d?w=640",
    text: "Můžu doporučit, posílájí mě na dobré lokality. Můžu si i něco nechat. Systém je fakt dobrý.",
  },
  {
    name: "Jana Nováková",
    title: "24. 10. 2021",
    image: "https://images.unsplash.com/photo-1607746882042-944635dfe10e?w=640",
    text: "Pašovala jsem artefakty roky, nyní je můžu sama získávat a prodávat legálně. Děkuji za skvělý systém. ",
  },
  {
    name: "Tomáš Jedno",
    title: "24. 10. 2021",
    image: "https://images.unsplash.com/photo-1639149888905-fb39731f2e6c?w=640",
    text: "Rychlá verze AMČR se stala realitou. Mrzí mě, že nelze objednávat meníčka, musím stále používat Wolt. Kdyby se to podařilo sjednotit, dám 5 hvězd.",
  },
  {
    name: "Franz Kapka",
    title: "24. 10. 2021",
    image: "https://images.unsplash.com/photo-1601455763557-db1bea8a9a5a?w=640",
    text: "Už nemusím hledat vodu, nahlásím v aplikaci žáměr a archeologové přijedou a vykopou. Ušetří mi spoustu peněz. Můžu doporučit.",
  },
];
---

<div class="mt-24 flex items-center justify-between">
  <h2 class="text-2xl lg:text-2xl font-bold lg:tracking-tight">
    Aktuality <span class="text-amcrbrown-900">AMČR</span>
  </h2>
  <a
    href="https://amcr.aiscr.cz/pas/"
    class="text-sm px-2 transition py-1 text-slate-600 hover:text-amcrbrown-900 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-red-500 focus-visible:outline-none focus-visible:shadow-outline-red rounded-full">
    Zobrazit všechny aktuality</a
  >
</div>
<div class="mt-0 relative overflow-hidden">
  <div class="absolute w-96 h-96 blur-2xl -z-10 right-1/3 -top-10"></div>
  <div
    class="absolute w-96 h-96 blur-2xl -z-10 right-1/3 translate-x-2/3 top-10">
  </div>
  <div class="relative md:flex gap-10 py-5 group overflow-x-auto">
    <div
      class="w-auto py-5 overflow-x-auto flex flex-nowrap min-w-full shrink-0 items-stretch gap-10 snap-x snap-mandatory px-5">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
    <!--  ↓↓ Shadow DOM to make the animation smooth (clone) ↓↓ -->
    <div
      class="hidden md:motion-reduce:hidden md:flex min-w-full shrink-0 items-center gap-10">
      {testimonials.map((item) => <Review {...item} />)}
    </div>
  </div>
</div>
