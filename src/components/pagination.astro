---
const { url } = Astro.props;
---

<div class="flex justify-center items-center mt-10 gap-4">
  {
    url.prev && (
      <a
        class="bg-gray-100 px-5 py-2 rounded-md hover:bg-gray-200 transition"
        href={url.prev}
        title="Jít na předchozí">
        &larr; Předochozí
      </a>
    )
  }
  {
    url.next && (
      <a
        class="bg-gray-100 px-5 py-2 rounded-md hover:bg-gray-200 transition"
        href={url.next}
        title="Jít na další">
        Další &rarr;
      </a>
    )
  }
</div>
